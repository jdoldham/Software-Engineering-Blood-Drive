extends layout

block content
  h1= title
  p Welcome to our test
  
  // Wrapper
  #wrapper
  
    // USER INFO
    #userInfo
      h2 Uer Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
      // /USER INFO
  
    // USER LIST
    h2 User List
    #userList
      table
        thead
          th fname
          th Email
          th Delete?
        tbody
    // /USER LIST
    
    // ADD USER
    h2 Add User
    #addUser
      fieldset
      input#inputUserEmail(type='text', placeholder='Email')
      br
      input#inputFirstName(type='text', placeholder='First Name')
      input#inputLastName(type='text', placeholder='Last Name')
      p Date of Birth
      input#inputDay(type='text', placeholder='Day')
      input#inputMonth(type='text', placeholder='Month')
      input#inputYear(type='text', placeholder='Year')
      br
      input#inputBloodType(type='text', placeholder='Blood Type')
      br
      input#inputLocation(type='text', placeholder='Zip-Code')
      br
      input#inputVisits(type='text', placeholder='visits')
      input#inputPassword(type='text', placeholder='Password')
      br
      button#btnAddUser Add User
    // /Add User
      
      
  // /WRAPPER